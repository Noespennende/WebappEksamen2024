// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  comments Comment[] // Relasjon til Comments
}

model Course {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  lessons     Lesson[]  // Relasjoner til Comments
}

model Lesson {
  id        String       @id @default(uuid())
  title     String
  slug      String       @unique
  preAmble  String
  courseId  String
  course    Course       @relation(fields: [courseId], references: [id])
  text      LessonText[] // Relasjon til LessonText
  comments  Comment[]    // Relasjon til Comments
}

model LessonText {
  id             String  @id @default(uuid())
  text           String
  lessonId       String
  orderPosition  Int     
  lesson         Lesson  @relation(fields: [lessonId], references: [id])
}


model Comment {
  id          String  @id @default(uuid())
  comment     String
  lessonSlug  String
  createdById      String
  lesson      Lesson  @relation(fields: [lessonSlug], references: [slug])
  createdBy   User    @relation(fields: [createdById], references: [id])
  
}

model Category {
  id     String    @id @default(uuid())
  name   String    @unique
  courses Course[]
}